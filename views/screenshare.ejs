<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Screen Share - Vikas Sharma Scrum Meeting Call</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    body {
      background-color: #202124;
      color: white;
      margin: 0;
      padding: 0;
      overflow: hidden;
      font-family: Arial, sans-serif;
    }

    /* Main Container */
    .main-container {
      display: flex;
      height: 100vh;
    }

    /* Left Side - Screen Share */
    .screen-share-container {
      flex: 70%;
      background: black;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 20px;
      font-weight: bold;
      position: relative;
    }

    .screen-share-container i {
      font-size: 50px;
      margin-bottom: 10px;
    }

    /* Right Side - Participants */
    .participants-container {
      flex: 30%;
      background: #3C4043;
      padding: 10px;
      display: flex;
      flex-direction: column;
      gap: 10px;
      overflow-y: auto;
    }

    .video-tile {
      background: #5F6368;
      border-radius: 10px;
      text-align: center;
      padding: 15px;
      position: relative;
      display: flex;
      align-items: center;
      gap: 10px;
      color: white;
    }

    .initials {
      width: 50px;
      height: 50px;
      background-color: gray;
      border-radius: 50%;
      font-size: 20px;
      display: flex;
      justify-content: center;
      align-items: center;
      font-weight: bold;
    }

    .mute-icon {
      position: absolute;
      top: 10px;
      right: 10px;
      color: white;
      background: rgba(0, 0, 0, 0.5);
      padding: 5px;
      border-radius: 50%;
    }

    /* Bottom Controls */
    .bottom-controls {
      position: fixed;
      bottom: 0;
      width: 100%;
      background: rgba(0, 0, 0, 0.8);
      padding: 10px;
      text-align: center;
      display: flex;
      justify-content: center;
      gap: 15px;
    }

    .bottom-controls button {
      width: 46px;
      height: 46px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      background-color: #5F6368;
      border: none;
      font-size: 18px;
    }

    .bottom-controls .btn-danger {
      background-color: #EA4335;
    }

    /* Badge Count */
    .badge-count {
      background-color: #5F6368;
      color: white;
      font-size: 12px;
      padding: 5px 8px;
      border-radius: 10px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .main-container {
        flex-direction: column;
        
      }

      .screen-share-container {
        flex: 1;
        height: 60vh;
      }

      .participants-container {
        flex: 1;
        height: 40vh;
      }

      .bottom-controls {
        flex-wrap: wrap;
        justify-content: center;
      }

      .bottom-controls button {
        width: 40px;
        height: 40px;
        font-size: 16px;
      }
    }
  </style>
</head>

<body>

  <div class="main-container">
    <!-- Left Side: Screen Share -->
    <div class="screen-share-container">
      <div>
        <i class="fa-solid fa-display"></i>
        <p>Screen Sharing...</p>
      </div>
    </div>

    <!-- Right Side: Participants -->
    <div class="participants-container">
      <% let users=[ { name: "Ahmed Hashmi" }, { name: "Mukesh Kumar" }, { name: "Rudhir Ingale" }, {
        name: "Vikas Sharma" }, { name: "Vicky Sharma" }, { name: "Angel Priya" }, { name: "Rudhir Ingale" }, {
        name: "Vikas Sharma" }, { name: "Vicky Sharma" }, { name: "Angel Priya" } ]; %>

        <% users.forEach((user, index)=> { %>
          <div class="video-tile" id="user-<%= index %>">
            <div class="initials">
              <%= user.name.charAt(0) %>
            </div>
            <p>
              <%= user.name %>
            </p>
            <span class="mute-icon"><i class="fas fa-microphone-slash"></i></span>
          </div>
          <% }); %>
    </div>
  </div>

  <!-- Bottom Controls -->
  <div class="bottom-controls">
    <button class="btn" id="global-mute">
      <i class="fas fa-microphone-slash"></i>
    </button>
    <button class="btn"><i class="fa-solid fa-video-slash"></i></button>
    <button class="btn"><i class="fa-solid fa-arrow-up-from-bracket"></i></button>
    <button class="btn"><i class="fa-solid fa-comment"></i></button>

    <!-- User Count -->
    <button class="btn position-relative">
      <i class="fa-solid fa-users"></i>
      <span class="badge badge-count position-absolute top-0 start-100 translate-middle">10</span>
    </button>
    <button class="btn btn-danger">
      <i class="fa-solid fa-phone"></i>
    </button>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>